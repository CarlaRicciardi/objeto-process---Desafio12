<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center text-success'>LOG IN (INICIAR SESIÓN)</h1>

  <div class='mb-3'>
    <form action='/login' method='POST'>
      <div>
        <label class='form-label fw-bold text-secondary fs-3' for='login'>Para ingresar, escriba su email y contraseña:</label>
        <input type='text' id='inputUser' name='username' class='form-control' placeholder='email' required />
        <input type='text' id='inputPass' name='password' class='form-control' placeholder='password' required />
      </div>
      <br />
      <input type='submit' class='btn btn-success d-block mx-auto' value='Ingresar!' />
    </form>
    <button type='button' class='btn btn-outline-success'><a href='./signup' style='text-decoration: none;'>Sign Up</a></button>

  </div>

</section>